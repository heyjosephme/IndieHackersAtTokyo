---
interface Props {
    nextEventDate: string;
    nextEventTime: string;
}
const { nextEventDate = "March 15", nextEventTime = "19:00 - 21:00 JST" } =
    Astro.props;
---

<section class="relative min-h-screen bg-gradient-to-b from-gray-900 via-purple-900 to-violet-900 overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute w-96 h-96 -top-10 -left-10 bg-purple-500/20 rounded-full blur-3xl animate-blob"></div>
        <div class="absolute w-96 h-96 -top-10 -right-10 bg-blue-500/20 rounded-full blur-3xl animate-blob animation-delay-2000"></div>
        <div class="absolute w-96 h-96 bottom-32 left-10 bg-violet-500/20 rounded-full blur-3xl animate-blob animation-delay-4000"></div>
    </div>

    <!-- Content -->
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-16 text-center">
        <!-- Event Date Card -->
        <div class="inline-block mb-8 transform hover:scale-105 transition-transform duration-300">
            <div class="px-8 py-4 backdrop-blur-lg bg-white/10 rounded-2xl border border-white/20 shadow-xl">
                <p class="text-sm font-medium text-purple-300">Next Meetup</p>
                <p class="mt-1 text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 text-transparent bg-clip-text">
                    {nextEventDate}
                </p>
                <p class="mt-1 text-sm text-purple-200">{nextEventTime}</p>
            </div>
        </div>

        <!-- Main Title -->
        <h1 class="mt-8 text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 tracking-tight animate-title">
            Tokyo Indie Hackers
        </h1>

        <!-- Glowing line -->
        <div class="w-24 h-1 mx-auto mt-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full animate-glow"></div>

        <!-- Description -->
        <p class="mt-8 text-xl text-purple-100 max-w-3xl mx-auto animate-fade-in leading-relaxed">
            Join Tokyo's most active community of independent developers,
            creators, and entrepreneurs. Share ideas, get feedback, and build
            your next big thing!
        </p>

